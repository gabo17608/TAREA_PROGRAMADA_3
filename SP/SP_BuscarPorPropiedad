USE [TP3]
GO
/****** Object:  StoredProcedure [dbo].[SP_BuscarPorPropiedad]    Script Date: 25/11/2025 3:42:48 ******/
SET ANSI_NULLS ON
GO
SET QUOTED_IDENTIFIER ON
GO
ALTER   PROCEDURE [dbo].[SP_BuscarPorPropiedad]
    @inNumeroFinca NVARCHAR(20)
    , @outResultCode INT OUTPUT
    , @outResultado BIT OUTPUT                                  -- Resultado de la búsqueda

AS
BEGIN
    SET NOCOUNT ON;

    BEGIN TRY

        IF EXISTS (                                             -- Validar número de finca
            SELECT 1 
            FROM dbo.Propiedad 
            WHERE NumeroFinca = @inNumeroFinca
        )
        BEGIN
            SET @outResultado = 1;                              -- Búsqueda exitosa
        END
        ELSE
        BEGIN
            SET @outResultado = 0;                              -- Búsqueda fallida
        END

        SET @outResultCode = 0;
        
    END TRY
    BEGIN CATCH
        SET @outResultCode = 50008;
        
        INSERT INTO dbo.DBError (
            UserName
            , Number
            , State
            , Severity
            , Line
            , [Procedure]
            , Message
            , DateTime
        )
        VALUES (
            'SP_BuscarPorPropiedad'
            , ERROR_NUMBER()
            , ERROR_STATE()
            , ERROR_SEVERITY()
            , ERROR_LINE()
            , 'SP_BuscarPorPropiedad'
            , ERROR_MESSAGE()
            , GETDATE()
        );
    END CATCH;
END;