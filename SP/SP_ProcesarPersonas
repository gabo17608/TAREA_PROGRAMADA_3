USE [TP3]
GO
/****** Object:  StoredProcedure [dbo].[SP_ProcesarPersonas]    Script Date: 25/11/2025 3:47:01 ******/
SET ANSI_NULLS ON
GO
SET QUOTED_IDENTIFIER ON
GO
ALTER   PROCEDURE [dbo].[SP_ProcesarPersonas]
    @inXmlFecha XML
    , @outResultCode INT OUTPUT
AS
BEGIN
    SET NOCOUNT ON;
    
    BEGIN TRY

        IF @inXmlFecha.exist('/FechaOperacion/Personas/Persona') = 0
        BEGIN
            SET @outResultCode = 0;
            RETURN;
        END;

        INSERT INTO dbo.Persona (
            ValorDocumentoId
            , Nombre
            , Email
            , Telefono1
        )
        SELECT 
            Persona.value('@valorDocumento', 'VARCHAR(50)')
            , Persona.value('@nombre', 'NVARCHAR(100)')
            , Persona.value('@email', 'NVARCHAR(100)')
            , Persona.value('@telefono', 'VARCHAR(20)')
        FROM @inXmlFecha.nodes('/FechaOperacion/Personas/Persona') AS Personas(Persona);
        
        SET @outResultCode = 0;
    END TRY

    BEGIN CATCH
        SET @outResultCode = 50008;

        INSERT INTO dbo.DBError (
            UserName
            , Number
            , State
            , Severity
            , Line
            , [Procedure]
            , Message
            , DateTime
        )
        VALUES (
            'SP_ProcesarPersonas'
            , ERROR_NUMBER()
            , ERROR_STATE()
            , ERROR_SEVERITY()
            , ERROR_LINE()
            , 'SP_ProcesarPersonas'
            , ERROR_MESSAGE()
            , GETDATE()
        );
    END CATCH;
END;